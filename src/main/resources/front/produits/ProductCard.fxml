<AnchorPane prefHeight="222.0" prefWidth="410.0" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controllers.front.produits.ProductCard">
   <children>
      <HBox layoutY="14.0" prefHeight="146.0" prefWidth="410.0">
         <children>
            <ImageView fx:id="productImage" fitHeight="164.0" fitWidth="195.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="160.0" prefWidth="213.0">
               <children>
                  <Label fx:id="productName" prefHeight="34.0" prefWidth="210.0" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                  <Label fx:id="productPrice" prefHeight="34.0" prefWidth="210.0" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <Label fx:id="productDescription" prefHeight="94.0" prefWidth="210.0" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="197.0" layoutY="158.0" prefHeight="55.0" prefWidth="200.0">
         <children>
            <Label fx:id="productId" text="Label" visible="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Label>
         </children>
      </HBox>
      <Button fx:id="addProductToPannierBtn" layoutX="14.0" layoutY="186.0" mnemonicParsing="false" onAction="#ajouterAuPanier" prefHeight="30.0" prefWidth="146.0" styleClass="ajouter-au-panier" text="Ajouter au panier" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
